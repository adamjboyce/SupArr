# =============================================================================
# Machine 2: *arr Stack — Environment Configuration
# =============================================================================
# Copy to .env and fill in your values before running init script.
# API keys auto-populated by init script on first run.
# =============================================================================

# User/Group IDs (run `id` on host)
PUID=1000
PGID=1000

# Timezone
TZ=America/Chicago

# Paths
MEDIA_ROOT=/mnt/media
DOWNLOADS_ROOT=/mnt/downloads       # Local NVMe preferred
APPDATA=/opt/arr-stack

# NAS — for automatic NFS mount setup
NAS_IP=
NAS_MEDIA_EXPORT=/volume1/media
NAS_DOWNLOADS_EXPORT=/volume1/downloads

# NordVPN (via Gluetun)
NORD_VPN_TYPE=openvpn                # or 'wireguard' for NordLynx
NORD_USER=your_nord_service_email
NORD_PASS=your_nord_service_password
# For WireGuard/NordLynx (faster):
# NORD_WIREGUARD_KEY=your_nordlynx_private_key
NORD_COUNTRY=United States
NORD_CITY=

# qBittorrent — set a custom password (default: adminadmin)
QBIT_PASSWORD=

# Local network — Gluetun needs this for LAN access to VPN'd containers
LOCAL_SUBNET=192.168.1.0/24

# Tailscale
TAILSCALE_AUTH_KEY=tskey-auth-XXXXXXXXXXXXXXXXXXXX

# *arr API Keys — AUTO-POPULATED by init script on first run
# Leave blank; the script reads them from container config files
RADARR_API_KEY=
SONARR_API_KEY=
LIDARR_API_KEY=
PROWLARR_API_KEY=
BAZARR_API_KEY=
READARR_API_KEY=
WHISPARR_API_KEY=

# SABnzbd — set after running SABnzbd setup wizard
SABNZBD_API_KEY=

# Notifiarr — https://notifiarr.com
NOTIFIARR_API_KEY=

# Watchtower notifications (optional)
WATCHTOWER_NOTIFICATION_URL=
